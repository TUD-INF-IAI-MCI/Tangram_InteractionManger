<?xml version="1.0" encoding="utf-8" ?>
<mappings>

  <function name="bkb_return" description="Linebreak">
    <mapping device="_default">k8</mapping>
  </function>

  <function name="bkb_space" description="Space">
    <mapping device="_default">F1</mapping>
    <mapping device="_default">F2</mapping>
  </function>

  <function name="bkb_backspace" description="Backspace - remove the previouse character">
    <mapping device="_default">F1,F2</mapping>
